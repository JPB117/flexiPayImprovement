<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.workpoint.icpak.client.ui.component'>
	<g:HTMLPanel>
		<div class="col-sm-12">
			<div class="form-group">
				<div class="row">
					<div class="col-xs-6">
						<label for="firstname">last modified by:</label>
						<span ui:field="spnLastUpdated"></span>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-xs-6">
						<label for="firstname">Payment Status:</label>
						<d:DropDownList ui:field="lstPaymentStatus"></d:DropDownList>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-xs-6">
						<label for="firstname">Receipt No:</label>
						<d:TextField ui:field="txtReceiptNo" styleName="form-control"
							placeholder="Receipt No" value="" required="true">
						</d:TextField>
					</div>
					<div class="col-xs-6">
						<label for="lastname">Clearance No:</label>
						<d:TextField ui:field="txtClearanceNo" styleName="form-control"
							placeholder="Clearance No" value="" required="true">
						</d:TextField>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-xs-6 hide">
						<g:CheckBox ui:field="chckIsCredit">Is Credit?</g:CheckBox>
					</div>

					<div class="col-xs-6">
						<label for="phone">LPO No:</label>
						<d:TextField ui:field="txtLPONo" styleName="form-control"
							placeholder="LPO No:" value="" required="true">
						</d:TextField>
					</div>
				</div>
			</div>

			<h5>Accomodation Payment</h5>
			<hr />
			<div class="form-group">
				<div class="row">
					<div class="col-xs-6" style="padding-top: 20px;">
						<g:CheckBox ui:field="chckIsAccomodationPaid">  Accomodation Paid?</g:CheckBox>
					</div>
					<div class="col-xs-6">
						<label for="phone">Amount:</label>
						<d:TextField ui:field="txtAccomodationAmount"
							styleName="form-control" placeholder="Accomodation Amount:"
							value="" required="true">
						</d:TextField>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 