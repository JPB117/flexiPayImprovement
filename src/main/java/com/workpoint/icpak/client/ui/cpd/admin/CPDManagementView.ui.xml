<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:d='urn:import:com.workpoint.icpak.client.ui.component' xmlns:p='urn:import:com.workpoint.icpak.client.ui.cpd.header'
	xmlns:table='urn:import:com.workpoint.icpak.client.ui.cpd.table'
	xmlns:t='urn:import:com.workpoint.icpak.client.ui.component.tabs'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel ui:field="container"
		styleName="content-wrapper ng-scope ng-fadeInUp">
		<h3 class="ng-scope">
			CPD Management
			<span class="spnPeriod"></span>
		</h3>


		<div class="main-content">
			<g:HTMLPanel styleName="row hide" ui:field="panelDates">
				<div class="col-lg-12">
					<form class="form-inline">
						<div class="form-group">
							<label for="from">From:</label>
							<d:DropDownList ui:field="lstFrom" styleName="form-control"></d:DropDownList>
						</div>
						<div class="form-group">
							<label for="to">to:</label>
							<d:DropDownList ui:field="lstTo" styleName="form-control"></d:DropDownList>
						</div>
					</form>
				</div>
			</g:HTMLPanel>

			<g:HTMLPanel ui:field="panelDetail">
				<div class="row">
					<div class="col-lg-12">
						<p:CPDHeader ui:field="headerContainer">
						</p:CPDHeader>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12">
						<g:HTMLPanel styleName="panel widget" ui:field="panelListing">
							<div class="panel-heading">CPD Summary</div>
							<div class="panel-body">
								<div ui:field="divTab1Content" class="tab-pane fade in active">
									<!-- Tabs -->
									<t:TabPanel ui:field="divTabs" styleName="hide">
									</t:TabPanel>
								</div>

								<div class="row">
									<div class="col-lg-12">
										<d:ActionLink ui:field="aCreate" styleName="btn btn-primary btn-fill">
											<span class="fa fa-plus"></span>
											Record CPD
										</d:ActionLink>
									</div>
									<br />
								</div>

								<div class="row">
									<div class="col-lg-12">
										<table:CPDTable ui:field="tblView">
										</table:CPDTable>
									</div>
								</div>
							</div>
						</g:HTMLPanel>
					</div>
				</div>
			</g:HTMLPanel>

		</div>

	</g:HTMLPanel>
</ui:UiBinder>
