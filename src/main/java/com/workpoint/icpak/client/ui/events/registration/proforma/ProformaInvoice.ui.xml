<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		<div class="col-sm-12">

			<div class="row">
				<div class="col-sm-12">
					<br />
					<p>Institute of Certified Public Accountants of Kenya</p>
					<p>P.O. BOX 59963 00200 (City Square), CPA Center,
						Ruaraka,</p>
					<p>Thika Rd. Website: www.icpak.com | E-mail:icpak@icpak.com</p>
					<p>Mobile:0727-531006/0733-856262 | Wireless:020 2304226/7</p>
				</div>
			</div>

			<div class="row">
				<h2>PROFORMA INVOICE</h2>
				<hr />
				<div class="col-sm-6">
					@#companyName
					<br />
					@#companyAddress
					<br />
				</div>
				<div class="col-sm-6">
					<b>Quote No:</b>
					@#quoteNo
					<br />
					@#date
					<br />
				</div>
			</div>

			<div class="row">
				<h4>Invoice Details</h4>
				<hr />
			</div>

			<table class="table table-bordered table-condensed">
				<thead>
					<tr>
						<th>Description</th>
						<th>Unit Price(Ksh)</th>
						<th>Amount(Ksh)</th>
					</tr>
				</thead>
				<tbody>
					<!--@>invoiceDetails -->
					<tr>
						<td>@#description</td>
						<td>@#unitPrice</td>
						<td class="num">@#amount</td>
					</tr>
					<!--@<invoiceDetails -->
					<tr>
						<td></td>
						<td class="num">
							<b>Grand Total</b>
						</td>
						<td class="num">
							<b style="border-bottom: 3px double;">KES
								@#totalAmount</b>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 