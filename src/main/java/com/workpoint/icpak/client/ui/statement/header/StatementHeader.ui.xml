<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.workpoint.icpak.client.ui.component'>

	<g:HTMLPanel>
		<div class="row">
			<div class="col-lg-12">
				<div class="col-lg-4">
					<div class="panel widget">
						<div class="row row-table">
							<div class="col-lg-8 pv-lg text-center">
								<div class="h2 mt0">
									<span ui:field="spnTotalDebit"></span>
								</div>
								<div class="text-uppercase" ui:field="title1">Total Debit</div>
							</div>
							<div class="col-lg-4 text-right text-muted">
								<em class="fa fa-briefcase fa-2x"></em>
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg-4">
					<div class="panel widget">
						<div class="row row-table">
							<div class="col-xs-8 pv-lg text-center">
								<div class="h2 mt0">
									<span class="" ui:field="spnTotalCredit">
									</span>
								</div>
								<div class="text-uppercase" ui:field="title2">Total Credit</div>
							</div>
							<div class="col-lg-4 text-right text-muted">
								<em class="fa fa-check fa-2x"></em>
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg-4">
					<div class="panel widget">
						<div class="row row-table">
							<div class="col-xs-8 pv-lg text-center">
								<div class="h2 mt0">
									<span class="" ui:field="spnBalance" title="Balance">
									</span>
								</div>
								<div class="bold muted helper-font-small" ui:field="title3">Current
									Balance</div>
							</div>

							<div class="col-lg-4 text-right text-muted">
								<em class="fa fa-clock-o fa-2x"></em>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 