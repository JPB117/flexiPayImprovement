<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.workpoint.icpak.client.ui.component'>

	<g:HTMLPanel styleName="row">
		<div class="col-lg-4">
			<div class="panel widget bg-primary">
				<div class="row row-table">
					<div class="col-xs-4 text-center bg-primary-dark pv-lg">
						<em class="icon-cloud-upload fa-3x"></em>
					</div>
					<div class="col-xs-8 pv-lg">
						<div class="h2 mt0">
							<span ui:field="spnTransactions"></span>
						</div>
						<div class="text-uppercase">Total Amount (KES)</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-4">
			<div class="panel widget bg-primary">
				<div class="row row-table">
					<div class="col-xs-4 text-center bg-primary-dark pv-lg">
						<em class="icon-cloud-upload fa-3x"></em>
					</div>
					<div class="col-xs-8 pv-lg">
						<div class="h2 mt0">
							<span class="" ui:field="spnAmount">
							</span>
						</div>
						<div class="text-uppercase">Total Paid(KES)</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-4">
			<div class="panel widget bg-primary">
				<div class="row row-table">
					<div class="col-xs-4 text-center bg-primary-dark pv-lg">
						<em class="icon-cloud-upload fa-3x"></em>
					</div>
					<div class="col-xs-8 pv-lg">
						<div class="h2 mt0">
							<span class="" ui:field="spnBalance" title="Balance">
							</span>
						</div>
						<div class="bold muted helper-font-small">Balance(KES)</div>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 