<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:d='urn:import:com.workpoint.icpak.client.ui.component'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="set-full-height">
		<g:HTMLPanel styleName="content-wrapper ng-scope ng-fadeInUp"
			ui:field="divMainContainer">
			<h3 class="ng-scope">
				Statements
			</h3>


			<div class="form-group">
				<div class="row">
					<div class="col-lg-3">
						<label for="firstname">Start Date:</label>
						<d:DateField ui:field="txtFirstname" class="form-control" />
					</div>
					<div class="col-lg-3">
						<label for="firstname">End Date:</label>
						<d:DateField ui:field="txtLastname" class="form-control" />
					</div>
					<div class="col-lg-1">
						<label for="firstname">&nbsp;&nbsp;</label>
						<br/>
						<d:ActionLink ui:field="aRefresh" styleName="btn btn-fill btn-default">
							<i class="fa fa-refresh"></i>						
						</d:ActionLink>
					</div>
				</div>
			</div>


			<div class="col-lg-12">
				<div class="panel widget">
					<d:Grid ui:field="grid"></d:Grid>
				</div>
			</div>


		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
