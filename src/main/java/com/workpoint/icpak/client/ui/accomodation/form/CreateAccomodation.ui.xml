<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:d='urn:import:com.workpoint.icpak.client.ui.component' xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:table='urn:import:com.workpoint.icpak.client.ui.cpd.table'
	xmlns:up='urn:import:com.workpoint.icpak.client.ui.upload.custom'>

	<g:HTMLPanel>
		<g:HTMLPanel styleName="col-lg-12" ui:field="panelForm">
			<d:IssuesPanel ui:field="issues"></d:IssuesPanel>
			<div class="form-group">
				<div class="row">
					<div class="col-xs-12">
						<label for="from">Event:</label>
						<g:InlineLabel ui:field="spnEvent"></g:InlineLabel>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-xs-12">
						<label for="firstname">Hotel Name:</label>
						<d:TextField ui:field="txtHotelName" styleName="form-control"
							placeholder="Hotel Name" value="" required="true">
						</d:TextField>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-lg-6">
						<label for="firstname">Nights:</label>
						<d:TextField ui:field="txtNights" styleName="form-control"
							placeholder="Number of Nights" value="" required="true">
						</d:TextField>
					</div>

					<div class="col-lg-6">
						<label for="firstname">Price:</label>
						<d:TextField ui:field="txtPrice" styleName="form-control"
							placeholder="Hotel Pricing" value="" required="true">
						</d:TextField>
					</div>
					<div class="col-lg-6">
						<label for="firstname">Spaces:</label>
						<d:TextField ui:field="txtSpace" styleName="form-control"
							placeholder="Spaces available" value="" required="true">
						</d:TextField>
					</div>
				</div>
			</div>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 