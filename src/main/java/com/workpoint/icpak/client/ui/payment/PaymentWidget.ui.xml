<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.workpoint.icpak.client.ui.component'>
	<g:HTMLPanel styleName="col-sm-12">
		<br />
		<br />

		<ul class="nav nav-tabs">
			<li role="presentation" class="active">
				<!-- <span class="fa fa-mobile"></span> -->
				<a href="#mobile" aria-controls="home" role="tab" data-toggle="tab">Pay
					with Mobile Money</a>
			</li>
			<li role="presentation">
				<!-- <span class="fa fa-credit-card"></span> -->
				<a href="#cards" aria-controls="home" role="tab" data-toggle="tab">Pay
					with Credit/Debit Card</a>
			</li>
		</ul>


		<div class="tab-content">
			<div role="tabpanel" class="tab-pane active" id="mobile">
				<div class="row">
					<div class="col-sm-6">
						<h5>
							<g:InlineLabel>A: Payment by </g:InlineLabel>
							<g:Image url="img/Mpesa_Logo.png"></g:Image>
						</h5>
						<ul>
							<li>
								1. Go to
								<Strong>M-PESA</Strong>
								option on your phone
							</li>
							<li>
								2. Select the
								<Strong>Lipa Na M-PESA</Strong>
							</li>
							<li>
								3. Select
								<strong ui:field="spnServiceLabel">Buy Goods and Services</strong>
								option
							</li>
							<li>
								4. Enter
								<g:InlineLabel ui:field="spnBusinessLabel">Business number</g:InlineLabel>
								<strong ui:field="spnBusinessNo">220220</strong>
							</li>
							<li ui:field="spnAccountNo">
								5. Enter Account no.
								<strong>ICPAK34567</strong>
							</li>
							<li>
								6. Enter the Amount KES
								<strong ui:field="spnAmount">Ksh. 2,500/=</strong>
							</li>
							<li>
								7. Enter your M-PESA PIN and Press Send
							</li>
							<li>8. You will receive a confirmation SMS from M-PESA with a
								Confirmation
								Code</li>
							<li>
								9. You will receive a confirmation SMS on the number you paid
								with
								from
								<Strong ui:field="spnOrgName">
									ICPAK.
								</Strong>
								confirming that your payment has received.
							</li>

							<li>
								10.Click on
								<strong>Complete Payment</strong>
								Button Below to finish your payment
							</li>
						</ul>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-9">
						<d:ActionLink ui:field="aCompleteMpesa" styleName="btn btn-gold btn-fill">
							Complete Payment</d:ActionLink>
					</div>
				</div>
			</div>
			<div role="tabpanel" class="tab-pane" id="cards">
				<div class="col-sm-12">
					<d:IssuesPanel ui:field="issuesPanel" styleName="hide alert alert-danger"></d:IssuesPanel>
				</div>

				<div class="col-sm-12">
					<h5>
						<g:InlineLabel>Supported Cards:</g:InlineLabel>
						<g:Image url="img/Visa_Logo.png"></g:Image>
						<g:Image url="img/Mastercard_Logo.png"></g:Image>
					</h5>
					<br />

					<div class="form-group">
						<div class="row">
							<div class="col-sm-7">
								<d:TextField class="form-control" ui:field="txtCardHolderName"
									placeholder="Name on the Card">
								</d:TextField>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="row">
							<div class="col-sm-4">
								<d:TextField class="form-control" placeholder="Debit/Credit Card Number"
									ui:field="txtCardNumber">
								</d:TextField>
							</div>
							<div class="col-sm-3">
								<d:TextField styleName="form-control" ui:field="txtCvv"
									placeholder="Security Code"></d:TextField>
							</div>
						</div>
					</div>

					<div class="form-group">
						<div class="row">
							<div class="col-sm-3">
								<d:TextField styleName="form-control" ui:field="txtAmount"
									disabled="true" placeholder="Amount to Pay">
								</d:TextField>
								<span class="help-inline">(Amount to pay)</span>
							</div>
						</div>
					</div>

					<div class="form-group">
						<div class="row">
							<div class="row">
								<div class="col-sm-7">
									<div class="col-sm-6">
										<d:DropDownList styleName="form-control col-sm-2"
											ui:field="lstMonths">
										</d:DropDownList>
										<span class="help-inline">(Expiry)</span>
									</div>

									<div class="col-sm-6">
										<d:DropDownList styleName="form-control"
											ui:field="lstYears">
										</d:DropDownList>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="form-group">
						<div class="row">
							<div class="col-sm-9">
								<d:ActionLink ui:field="aPay" styleName="btn btn-gold btn-fill">
									Pay</d:ActionLink>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<br />
		<br />
	</g:HTMLPanel>
</ui:UiBinder> 