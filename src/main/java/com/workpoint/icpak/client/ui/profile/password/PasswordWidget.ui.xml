<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.workpoint.icpak.client.ui.component">

	<g:HTMLPanel styleName="panel panel-default">
		<div class="panel-heading">
			Password Configuration
		</div>

		<div class="panel-body">
			<d:IssuesPanel ui:field="issues"></d:IssuesPanel>

			<div class="form-horizontal">
				<fieldset>
					<legend>Create Your Password:</legend>
					<p class="text-muted">Create a password to access your account.</p>
					<div class="form-group">
						<label class="col-sm-2 control-label">UserName:</label>
						<div class="col-sm-10">
							<d:TextField styleName="form-control form-control-rounded"
								disabled="true" ui:field="txtEmail"></d:TextField>
						</div>
					</div>
				</fieldset>

				<fieldset>
					<div class="form-group">
						<label class="col-sm-2 control-label">Password:</label>
						<div class="col-sm-10">
							<d:PasswordField styleName="form-control form-control-rounded"
								ui:field="txtPassword"></d:PasswordField>
						</div>
					</div>
				</fieldset>

				<fieldset>
					<div class="form-group">
						<label class="col-sm-2 control-label">Confirm Password:</label>
						<div class="col-sm-10">
							<d:PasswordField styleName="form-control form-control-rounded"
								ui:field="txtConfirmPassword"></d:PasswordField>
						</div>
					</div>
				</fieldset>

				<fieldset>
					<d:ActionLink ui:field="aSave"
						styleName="btn btn-fill btn-primary pull-left btn-fill">Submit</d:ActionLink>

					<d:ActionLink ui:field="aCancel"
						styleName="btn btn-fill btn-default pull-right btn-fill">Cancel</d:ActionLink>
				</fieldset>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 