<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.workpoint.icpak.client.ui.component">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<div class="form-group">
			<div class="row" ui:field="divMemberBalance">
				<div class="col-lg-8">
					<div class="alert alert-success">
						Your current balance is
						<Strong ui:field="elCurrentBalance"></Strong>
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row hide" ui:field="divMemberNo">
				<div class="col-lg-6">
					<label for="firstname" class="pull-right" style="padding-top:10px">
						Enter Member
						Number:
					</label>
				</div>
				<div class="col-lg-3 p0">
					<d:TextField ui:field="txtMemberNo" styleName="form-control"></d:TextField>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<div class="col-lg-6">
					<label for="firstname" class="pull-right" style="padding-top:10px">
						Amount you
						wish to pay:
					</label>
				</div>
				<div class="col-lg-3 p0">
					<d:TextField ui:field="txtAmountToPay" styleName="form-control"
						type="number"></d:TextField>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 