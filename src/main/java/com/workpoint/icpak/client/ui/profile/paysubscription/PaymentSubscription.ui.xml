<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.workpoint.icpak.client.ui.component">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel styleName="row">
		<g:HTMLPanel styleName="col-lg-8" ui:field="panelParent1">
			<div class="form-group">
				<div class="row" ui:field="divMemberBalance">
					<div class="col-lg-9">
						<div class="alert alert-success">
							Your current balance is
							<Strong ui:field="elCurrentBalance"></Strong>
						</div>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row hide" ui:field="divMemberNo">
					<div class="col-lg-5 col-sm-5 col-xs-5 col-md-5">
						<label for="firstname" class="pull-right" style="padding-top:10px">
							Enter Member
							Number:
						</label>
					</div>
					<div class="col-lg-3 col-sm-3 col-xs-5 col-md-3 p0">
						<d:TextField ui:field="txtMemberNo" styleName="form-control"
							placeholder="eg:1234"></d:TextField>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-lg-5 col-sm-5 col-xs-5 col-md-5">
						<label for="firstname" class="pull-right" style="padding-top:10px">
							Amount you
							wish to pay:
						</label>
					</div>
					<div class="col-lg-3 col-sm-3 col-xs-5 col-md-3 p0">
						<d:TextField ui:field="txtAmountToPay" styleName="form-control"
							type="number" placeholder="eg:10000"></d:TextField>
					</div>
				</div>
			</div>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 