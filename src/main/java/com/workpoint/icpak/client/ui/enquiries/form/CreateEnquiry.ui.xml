<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:d='urn:import:com.workpoint.icpak.client.ui.component' xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:table='urn:import:com.workpoint.icpak.client.ui.cpd.table'
	xmlns:up='urn:import:com.workpoint.icpak.client.ui.upload.custom'>

	<g:HTMLPanel>
		<g:HTMLPanel styleName="col-lg-12" ui:field="panelForm">
			<d:IssuesPanel ui:field="issues"></d:IssuesPanel>
			<div class="form-group">
				<div class="row">
					<div class="col-lg-12">
						<label for="firstname">Full Names:</label>
						<d:TextField ui:field="txtFullNames" styleName="form-control"
							placeholder="Your Names" value="" required="true">
						</d:TextField>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-lg-6">
						<label for="firstname">ICPAK Membership No:</label>
						<d:TextField ui:field="txtMemberNo" styleName="form-control"
							placeholder="" value="" required="true">
						</d:TextField>
					</div>
					<div class="col-lg-6">
						<label for="firstname">Email Address:</label>
						<d:TextField ui:field="txtEmail" styleName="form-control"
							placeholder="" value="" required="true">
						</d:TextField>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-lg-6">
						<label for="firstname">Mobile Phone:</label>
						<d:TextField ui:field="txtMobile" styleName="form-control"
							placeholder="" value="" required="true">
						</d:TextField>
					</div>
					<div class="col-lg-6">
						<label for="from">Category:</label>
						<d:DropDownList ui:field="lstCategory"></d:DropDownList>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-lg-12">
						<label for="firstname">Subject:</label>
						<d:TextField ui:field="txtSubject" styleName="form-control"
							placeholder="" value="" required="true">
						</d:TextField>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-lg-12">
						<label for="firstname">Your Message:</label>
						<d:TextArea ui:field="txtMessage" styleName="form-control"
							height="200px">
						</d:TextArea>
					</div>
				</div>
			</div>

		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 