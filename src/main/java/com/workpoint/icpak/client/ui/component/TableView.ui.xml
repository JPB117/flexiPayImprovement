<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.workpoint.icpak.client.ui.component">

	<g:HTMLPanel ui:field="overalContainer">
		<div class="search-bar" ui:field="divSearch">
			<g:HTMLPanel ui:field="panelSearch">
				<div class="col-md-3">
					<d:TextField placeholder="Search here" ui:field="txtSearch"
						styleName="form-control"></d:TextField>
				</div>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="panelApplicationStatus">
				<div class="col-md-3" ui:field="divDropDown">
					<d:DropDownList ui:field="lstApplicationStatus"
						styleName="form-control"></d:DropDownList>
				</div>
			</g:HTMLPanel>

			<g:HTMLPanel ui:field="panelPaymentStatus">
				<div class="col-md-3" ui:field="divPaymentStatus">
					<d:DropDownList ui:field="lstPaymentStatus"
						styleName="form-control"></d:DropDownList>
				</div>
			</g:HTMLPanel>

			<g:HTMLPanel ui:field="panelPaymentMode">
				<div class="col-md-2" ui:field="divPaymentMode">
					<d:DropDownList ui:field="lstPaymentMode" styleName="form-control"></d:DropDownList>
				</div>
			</g:HTMLPanel>

			<g:HTMLPanel ui:field="panelPaymentType">
				<div class="col-md-3" ui:field="divPaymentType">
					<d:DropDownList ui:field="lstPaymentType" styleName="form-control"></d:DropDownList>
				</div>
				<div class="col-md-2" style="padding-top: 8px;">
					<d:ActionLink ui:field="aAdvancedSearch" title="Advanced Search"
						text="Advanced">
					</d:ActionLink>
				</div>

			</g:HTMLPanel>

			<d:ActionLink ui:field="aSearch" styleName="btn btn-fill btn-default"
				text="Search">
			</d:ActionLink>

			<g:HTMLPanel ui:field="panelTowns">
				<div class="col-md-3" ui:field="divTownList">
					<d:DropDownList ui:field="listTowns" styleName="form-control"></d:DropDownList>
				</div>
			</g:HTMLPanel>

			<g:HTMLPanel ui:field="panelMemberCategory">
				<div class="col-md-3" ui:field="divMemberCategory">
					<d:DropDownList ui:field="listMemberCategory"
						styleName="form-control"></d:DropDownList>
				</div>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="panelDates">
				<div class="col-lg-2" style="margin-top:10px;">
					<Strong>Specify Period From:</Strong>
				</div>
				<div class="col-lg-2" style="padding:0px;">
					<d:DateField ui:field="dtStartDate" />
				</div>
				<div class="col-lg-1" style="margin-top: 10px;width: 4%;margin-left: 8px;">
					<Strong style="margin-top: 10px;width:4%;margin-left:8px;">To:</Strong>
				</div>
				<div class="col-lg-2">
					<d:DateField ui:field="dtEndDate" />
				</div>
				<div class="col-lg-1">
					<d:ActionLink ui:field="aFilter" styleName="btn btn-fill btn-default">
						Filter
					</d:ActionLink>
				</div>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="pull-right action-buttons"
				ui:field="panelActionButtons">
				<d:ActionLink ui:field="aDownloadPdf" styleName="hide">
					<i class="fa fa-file-pdf-o"></i>
					Download as Pdf
				</d:ActionLink>

				<d:ActionLink ui:field="aDownloadXls" styleName="hide">
					<i class="fa fa-file-pdf-o"></i>
					Download as xls
				</d:ActionLink>
			</g:HTMLPanel>
		</div>
		<g:HTMLPanel styleName="table table-striped table-hover table-bordered"
			ui:field="tblContainer">
			<div class='thead'>
				<g:HTMLPanel styleName="tr" ui:field="panelHeader">
				</g:HTMLPanel>
			</div>

			<g:FlowPanel ui:field="panelBody" styleName="tbody">
			</g:FlowPanel>

			<g:HTMLPanel ui:field="panelFooter" styleName="tfoot">
			</g:HTMLPanel>
		</g:HTMLPanel>

		<g:HTMLPanel ui:field="panelPaging">
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>