<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.workpoint.icpak.client.ui.component'>
	<g:HTMLPanel styleName="col-md-12">
		<div class="row">
			<div class="col-sm-12">
				<d:IssuesPanel ui:field="issues" styleName="alert alert-danger"></d:IssuesPanel>
			</div>


			<div class="col-sm-12">
				<div class="row">
					<div class="col-xs-6">
						<label for="firstname">Organization</label>
						<d:TextField ui:field="txtOrganization" styleName="form-control"
							placeholder="Organization Name" value="" required="true">
						</d:TextField>
					</div>
					<div class="col-xs-6">
						<label for="lastname">Position</label>
						<d:TextField ui:field="txtPosition" styleName="form-control"
							placeholder="Enter Position" value="" required="true">
						</d:TextField>
					</div>
				</div>

				<div class="form-group">
					<div class="row">
						<div class="col-xs-6">
							<label for="emailaddress">Start Date:</label>
							<d:DateField ui:field="dtStartDate" class="form-control"
								placeholder="Enter Start Date" value="" required="true">
							</d:DateField>
						</div>

						<div class="col-xs-6">
							<label for="phone">End Date:</label>
							<d:DateField ui:field="dtDateCompleted" styleName="form-control"
								placeholder="End Date" value="" required="true">
							</d:DateField>
						</div>
					</div>
				</div>


				<div class="form-group">
					<div class="row">
						<div class="col-xs-6">
							<label for="emailaddress">Task Nature:</label>
							<d:TextField ui:field="txtTaskNature" styleName="form-control"
								placeholder="Task Nature">
							</d:TextField>
						</div>

						<div class="col-xs-6">
							<label for="applicationCategory">Responsibilities:</label>
							<d:TextArea ui:field="txtResponsibility" styleName="form-control"
								placeholder="Responsibility" value="">
							</d:TextArea>
						</div>
					</div>

					<div class="form-group">
						<div class="row">
							<div class="col-xs-6">
								<label for="emailaddress">Clients:</label>
								<d:TextField ui:field="txtClients" styleName="form-control"
									placeholder="Comma separated" value="" required="true">
								</d:TextField>
							</div>

							<div class="col-xs-6">
								<label for="applicationCategory">Date passed:</label>
								<d:DateField ui:field="dtDatePassed" styleName="form-control"
									placeholder="Enter Date passed" value="" required="true">
								</d:DateField>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 