<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:d='urn:import:com.workpoint.icpak.client.ui.component' xmlns:up='urn:import:com.workpoint.icpak.client.ui.upload.custom'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	xmlns:t='urn:import:com.workpoint.icpak.client.ui.component.tabs'
	xmlns:password='urn:import:com.workpoint.icpak.client.ui.profile.password'
	ui:generateLocales='default'>

	<g:HTMLPanel ui:field="container"
		styleName="content-wrapper ng-scope ng-fadeInUp">
		<h3 class="ng-scope">
			User Profile
		</h3>

		<g:HTMLPanel ui:field="divProfileContent">
			<g:HTMLPanel styleName="row">
				<div class="col-xs-12">
					<div class="panel widget">
						<div class="panel-header">
							<div class="dropdown pull-right">
								<a class="btn btn-default dropdown-toggle" id="dropdownMenu1"
									data-toggle="dropdown" aria-expanded="true">
									Edit
									<span class="caret"></span>
								</a>
								<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
									<li>
										<d:ActionLink ui:field="aEdit">
											Edit Profile
										</d:ActionLink>
									</li>
									<li>
										<d:ActionLink ui:field="aChangePassword">
											Change Password
										</d:ActionLink>
									</li>
								</ul>
							</div>
						</div>
						<div class="panel-body">
							<div class="col-sm-2">
								<img class="thumbnail" src="img/james.jpg" width="200px"
									height="200px" />
							</div>
							<div class="col-sm-10">
								<h3 class="m0">
									<span ui:field="spnNames">Tom Kimani Muriranja</span>
								</h3>

								<div class="row">
									<p class="m0">
										<span>Membership:</span>
										Non-Practising
									</p>
									<br />
									
									<span>Profile Status:</span>
									<span class="label label-success label-fill">Active</span>

									<br />

									<span>Profile Completion:</span>
									100%
								</div>


								<div class="text-center bg-gray-dark p-lg mb-xl hide">
									<div class="row row-table">
										<div class="col-xs-4 br">
											<h3 class="m0">Non-Practising</h3>
											<p class="m0">
												<span>Membership</span>
											</p>
										</div>
										<div class="col-xs-4 br">
											<h3 class="m0">Active</h3>
											<p class="m0">Profile Status</p>
										</div>
										<div class="col-xs-4">
											<h3 class="m0">100%</h3>
											<p class="m0">Profile Completion</p>
										</div>
									</div>
								</div>
								<!-- <span class="text-muted">Non-Practising Member</span> -->
								<!-- <br /> -->
								<!-- <span class="label label-success label-fill">Membership Active</span> -->

								<!-- <div class="radial-bar radial-bar-25 radial-bar-xs" -->
								<!-- data-label="50%"></div> -->
							</div>
						</div>
					</div>
				</div>

				<div class="col-xs-4 hide">
					<div class="panel widget">
						<div class="panel-header">
							Profile Completion
						</div>
						<div class="panel-body">
							<div class="radial-bar radial-bar-25 radial-bar-xs"
								data-label="50%"></div>
						</div>
					</div>
				</div>
			</g:HTMLPanel>

			<div class="row">
				<div class="col-xs-12">
					<div class="row">
						<div class="panel widget">
							<div class="panel-heading">Profile Information</div>
							<div class="panel-body">
								<div class="col-xs-12">
									<!-- Tabs -->
									<t:TabPanel ui:field="divTabs">
									</t:TabPanel>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</g:HTMLPanel>

		<g:HTMLPanel ui:field="divPasswordContent">
			<password:PasswordWidget ui:field="panelPasswordWidget"></password:PasswordWidget>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
