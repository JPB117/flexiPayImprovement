<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:d='urn:import:com.workpoint.icpak.client.ui.component' xmlns:up='urn:import:com.workpoint.icpak.client.ui.upload.custom'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	xmlns:t='urn:import:com.workpoint.icpak.client.ui.component.tabs'
	xmlns:password='urn:import:com.workpoint.icpak.client.ui.profile.password'
	ui:generateLocales='default'>

	<g:HTMLPanel ui:field="container"
		styleName="content-wrapper ng-scope ng-fadeInUp">
		<h3 class="ng-scope">
			User Profile
		</h3>

		<g:HTMLPanel ui:field="divProfileContent" styleName="col-xs-12">
			<g:HTMLPanel styleName="row">
				<div class="col-xs-12">
					<div class="panel widget">
						<div class="ember-view popovercontainer ribbon" disabled="false"
							data-original-title="" title="">
							<div class="ribbon-inner ribbon-draft">
								Pending
							</div>
						</div>
						<div class="panel-header">
							<g:HTMLPanel styleName="dropdown pull-right"
								ui:field="divEditDropDown">
								<a class="btn btn-default dropdown-toggle" id="dropdownMenu1"
									data-toggle="dropdown" aria-expanded="true">
									Edit
									<span class="caret"></span>
								</a>
								<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
									<li>
										<d:ActionLink ui:field="aEdit">
											Edit Profile
										</d:ActionLink>
									</li>
									<li>
										<d:ActionLink ui:field="aChangePassword">
											Change Password
										</d:ActionLink>
									</li>
								</ul>
							</g:HTMLPanel>

							<g:HTMLPanel ui:field="divSavePanel">
								<d:ActionLink ui:field="aSaveChanges"
									styleName="btn btn-primary btn-fill pull-right">Save
									Changes</d:ActionLink>
							</g:HTMLPanel>
						</div>
						<div class="panel-body">
							<g:HTMLPanel ui:field="profileViewMode">
								<div class="col-sm-2">
									<br />
									<g:HTMLPanel ui:field="profileViewEditMode">
										<div class="profile-page">
											<g:FocusPanel ui:field="panelPicture">
												<g:Image ui:field="imgUser" styleName="thumbnail col-sm-offset-1" />
											</g:FocusPanel>
										</div>
									</g:HTMLPanel>
								</div>

								<div class="col-sm-10">
									<g:HTMLPanel ui:field="panelProfile">
										<up:Uploader ui:field="uploader" styleName="custom-file-input"></up:Uploader>
									</g:HTMLPanel>

									<g:HTMLPanel ui:field="PanelProfileDisplay">
										<h3 class="m0">
											<span ui:field="spnNames">Tom Kimani Muriranja</span>
										</h3>
										<div class="row">
											<div class="col-sm-4">
												<p class="text-muted">
													<br />
													Non-Practising
												</p>
												<div class="progress progress-striped progress-xs">
													<div role="progressbar" aria-valuenow="80"
														aria-valuemin="0" aria-valuemax="100"
														class="progress-bar progress-bar-green progress-80">
														<span class="text-muted small">80% Complete</span>
													</div>
												</div>
											</div>
										</div>
									</g:HTMLPanel>
								</div>
							</g:HTMLPanel>

						</div>
					</div>
				</div>
			</g:HTMLPanel>

			<div class="row">
				<div class="col-xs-12">
					<div class="panel widget">
						<div class="panel-heading">Profile Information</div>
						<div class="panel-body">
							<div class="col-xs-12">
								<!-- Tabs -->
								<t:TabPanel ui:field="divTabs">
								</t:TabPanel>
							</div>
						</div>
					</div>
				</div>
			</div>
		</g:HTMLPanel>

		<g:HTMLPanel ui:field="divPasswordContent">
			<password:PasswordWidget ui:field="panelPasswordWidget"></password:PasswordWidget>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
