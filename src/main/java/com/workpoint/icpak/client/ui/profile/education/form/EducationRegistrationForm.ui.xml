<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.workpoint.icpak.client.ui.component'>
	<g:HTMLPanel styleName="col-md-12">

		<div class="row">
			<div class="col-sm-12">
				<d:IssuesPanel ui:field="issues"></d:IssuesPanel>
				<h4 class="info-text hide">Complete below Form:</h4>
				<hr />
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-xs-6">
						<label for="institution">Institution Name</label>
						<d:TextField type="text" ui:field="txtInstitution"
							class="form-control" placeholder="Enter Institution Name" value=""
							required="true">
						</d:TextField>
					</div>
					<div class="col-xs-6">
						<label for="exambody">Examination Body</label>
						<d:TextField type="text" ui:field="txtExaminingBody"
							class="form-control" placeholder="Enter Examination Body" value=""
							required="true"></d:TextField>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-xs-6">
						<label for="startdate">Start Date</label>
						<d:DateField ui:field="dtStartDate" class="form-control"
							placeholder="Enter Start Date" value="" required="true">
						</d:DateField>
					</div>
					<div class="col-xs-6">
						<label for="class">Date Completed</label>
						<d:DateField ui:field="dtDateCompleted" class="form-control"
							placeholder="Enter End Date" value="" required="true">
						</d:DateField>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-xs-6">
						<label for="enddate">Section Passed</label>
						<d:TextField type="text" ui:field="txtSectionsPassed"
							class="form-control" placeholder="Enter Section passed" value=""
							required="true">
						</d:TextField>
					</div>
					<div class="col-xs-6">
						<label for="award">Registration Number</label>
						<d:TextField type="text" ui:field="txtRegistrationNo"
							class="form-control" placeholder="Enter Start Date" value=""
							required="true">
						</d:TextField>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-xs-6">
						<label for="enddate">Class / Division</label>
						<d:TextField type="text" ui:field="txtClassOrDivision"
							class="form-control" placeholder="Enter Class or Division" value=""
							required="true">
						</d:TextField>
					</div>
					<div class="col-xs-6">
						<label for="enddate">Award</label>
						<d:TextField type="text" ui:field="txtAward" class="form-control"
							placeholder="Enter Award" value="" required="true">
						</d:TextField>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-xs-6">
						<label for="enddate">Education Type:</label>
						<d:TextField type="text" ui:field="txtEduType" class="form-control"
							placeholder="Enter Education Type" value="" required="true">
						</d:TextField>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 